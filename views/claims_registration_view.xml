<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="view_claims_registration_list" model="ir.ui.view">
        <field name="name">claims.registration.list</field>
        <field name="model">claims.registration</field>
		<field name="priority">2</field>
        <field name="arch" type="xml">
            <list string="Claims Registration">
                <field name="name"/>
                <field name="user_id"/>
				<field name="hcp_id"/>
                <field name="receipt_date"/>
            </list>
        </field>
    </record>

    <record id="view_claims_registration_form" model="ir.ui.view">
        <field name="name">claims.registration.form</field>
        <field name="model">claims.registration</field>
        <field name="arch" type="xml">
		
            <form string="Claims Registration">
			<group>
                <field name="name"/>
                <field name="user_id"/>
				<field name="hcp_id" domain="[('hcp','=',True)]"/>
                <field name="receipt_date"/>
				
			</group>
			
			<notebook>
                 <page string="Claims">
					 <field name="lines">
						<list string="Claims">
							<field name="name" string = "Ref/Auth. Code"/>
							<field name="date_order" string="Date"/>
							<field name="partner_id" string ="Provider"/>
							 <field name="nhis_ref" /> 
							<field name="enrollee_id"/>
							<field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
							<field name="date_planned" invisible="1"/>                 
							<field name="provider_total" sum="Total amount" widget="monetary" string="Amount on Bill"/>
							<field name="amount_total" sum="Total amount" widget="monetary" string="Amount Vetted"/>
							<field name="amount_difference"/>
							<field name="state"/>
							<field name="invoice_status"/>
						</list>
					</field>
				</page>
			</notebook>
			
            </form>
		
        </field>
    </record>
	
	<record id = "claims_registration_list_view" model = "ir.actions.act_window">
        <field name = "name">Claim Registrations</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">claims.registration</field>
        <field name = "view_mode">list,form</field>
        <field name = "view_id" ref= "view_claims_registration_list"/>
   </record>
   
  
   
</odoo>